<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gregory.cs385.gamePage">

    <TextView
        android:text="@string/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/question"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:fontFamily="casual"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/choice_3"

        android:text="@string/choice_3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@drawable/question_box"
        android:textAllCaps="false"
        android:layout_below="@+id/choice_2"
        android:layout_alignLeft="@+id/choice_2"
        android:layout_alignStart="@+id/choice_2">

    </Button>

    <Button
        android:id="@+id/choice_1"

        android:text="@string/choice_1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="109dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@drawable/question_box"
        android:textAllCaps="false"
        android:layout_below="@+id/question"
        android:layout_alignLeft="@+id/choice_2"
        android:layout_alignStart="@+id/choice_2">

    </Button>

    <Button
        android:id="@+id/choice_2"

        android:text="@string/choice_2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@drawable/question_box"
        android:textAllCaps="false"
        android:layout_below="@+id/choice_1"
        android:layout_centerHorizontal="true">

    </Button>

</RelativeLayout>